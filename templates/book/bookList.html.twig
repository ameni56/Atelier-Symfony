{# templates/list.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des livres</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <!-- Header Section -->
    <header class="bg-warning text-white text-center py-3 mb-4">
        <h1 class="display-4">Bienvenue Ã  la Liste des Livres</h1>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h2 class="text-center mb-4">Liste des livres</h2>

                  <div class="mb-3 text-center">
                    <a href="{{ path('app_add_book') }}" class="btn btn-primary">Ajouter un Livre</a>
                      <a href="{{ path('app_count_romance_books') }}" class="btn btn-warning">Livres romantiques</a>
                       <a href="{{ path('app_books_between_dates') }}" class="btn btn-warning">Livres 2014-2018</a>
                    {# <a href="{{ path('app_books_between_dates') }}" class="btn btn-secondary">Livres entre deux dates</a> #}
                </div>

                {% if books is not defined or books is empty %}
                    <div class="alert alert-warning" role="alert">
                        <h4 class="alert-heading">No books found.</h4>
                    </div>
                {% else %}
                    <!-- Responsive Table -->
                    <div class="table-responsive">
                      {# <form action="{{ path('app_crud_book') }}" method="get">
       <input type="text" name="authorName" placeholder="searhc by author name">
       <input type="submit" value="search">
   </form> #}
                        <table class="table table-dark table-striped table-bordered text-center">
                            <thead class="thead-light">
                                <tr>
                                    <th>book Title</th>
                                   
                                     <th>book date publication</th>
                                   <th>Published</th>
                                   <th>Category</th>
                                     <th>Author</th>
                                      
                                      <th>Modifier</th>
                                       <th>Supprimer</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for book in books %}
                                    <tr>
                                        <td>{{ book.title }}</td>
                                       
                                         <td>
                                            {{ book.publicationDate|date('Y-m-d') }}
                                        </td>
                                           <td>
                                           {{ book.published }}
                                        </td>
                                          <td>
                                           {{ book.category }}
                                        </td>
                                          <td>
                                           {{ book.author.username }}
                                        </td>
                                        
                                        
                                         <td><a href="{{ path('app_update_book', { id: book.id }) }}">Modifier</a>
                                   
                                   <td><a href="{{ path('app_delete_book', { id: book.id }) }}">Supprimer</a>
                                   
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                 <div class="text-center mb-4">
    <p>Published books : <span class="badge badge-success">{{ countPublished }}</span></p>
    <p>Unpublished books  : <span class="badge badge-danger">{{ countUnpublished }}</span></p>
</div>
                {% endif %} 
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
